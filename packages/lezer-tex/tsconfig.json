{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "ESNext",
    "rootDir": ".",
    "allowJs": true
  },
  "ts-node": {
    "esm": true,
    // https://github.com/TypeStrong/ts-node/issues/422
    "experimentalSpecifierResolution": "node",
  },
  "include": ["src", "tests", "third_party"]
}
